<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_color"
    android:layout_height="match_parent"
    tools:context=".PostJournalActivity">


    <ImageView
        android:id="@+id/postiv"
        android:layout_width="379dp"
        android:layout_height="224dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_three" />

    <ImageView
        android:id="@+id/postupdateimagebtn"
        android:layout_width="83dp"
        android:layout_height="93dp"
        app:layout_constraintBottom_toBottomOf="@+id/postiv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/postiv"
        app:layout_constraintTop_toTopOf="@+id/postiv"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/postusernametv"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:layout_marginTop="156dp"
        android:text="Gina"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postdatetv"
        android:layout_width="101sp"
        android:layout_height="25sp"
        android:layout_marginStart="16dp"
        android:text="Today"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postusernametv" />

    <ProgressBar
        android:id="@+id/postprogressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/postsavebtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postthoughtedt"
        app:layout_constraintVertical_bias="0.177" />

    <EditText
        android:id="@+id/postedttitle"
        android:layout_width="345dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/customtitlrbg"
        android:ems="10"
        android:hint="Title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postiv" />

    <EditText
        android:id="@+id/postthoughtedt"
        android:layout_width="355dp"
        android:layout_height="124dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/customtitlrbg"
        android:ems="10"
        android:hint="Your Thought"
        android:inputType="textMultiLine"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postedttitle" />

    <Button
        android:id="@+id/postsavebtn"
        android:layout_width="374dp"
        android:layout_height="46dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:text="Save"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>